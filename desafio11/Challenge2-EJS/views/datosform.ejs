<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6" crossorigin="anonymous">
  
    <title><%= title %></title>
</head>
<body  style="background-color: rgb(255, 212, 230);">
    
    <div class="container" >
    <h1>Vista de Productos</h1>
 
    <% if( data!==false ){ %>
    <table class="table table-dark table-striped">
    <thead>
        <tr>
        <th scope="col">Title</th>
        <th scope="col">Price</th>
        <th scope="col">Picture</th>
        </tr>
    </thead>
    <tbody>  
           <% data.forEach(function(item) { %>
            <tr>
                <td><%= item.title %></td>
                <td><%= item.price %></td>
                <td><img src='<%= item.thumbnail %>' alt="<%= item.title %>" style="width: 90px;"></td>   
            </tr>
            <% }); %>
            
    </tbody>
    </table> 
    <a href="/home" class="btn btn-primary">Ir a formulario</a>
        <a href="/" class="btn btn-secondary">Ir a home</a>
    <% } else if(data===false) { %>
        <h2 class="alert alert-warning">No se encontraron productos!</h2>
        <br>
        <a href="/home" class="btn btn-primary">Ir a formulario</a>
        <a href="/" class="btn btn-secondary">Ir a home</a>
    
    <% } else { %>
        <h2>No hay nada</h2>
    <% }; %>
    </div>
    
</body>
</html>